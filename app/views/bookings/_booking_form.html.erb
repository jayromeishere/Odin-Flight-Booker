<%= form_for(setup_booking(@booking, params[:booking][:number_of_passengers]), method: "post") do |b| %>
	<%= b.hidden_field("flight_id", value: @selected_flight.id ) %>
	<%= b.fields_for :passengers do |passenger_form| %>
		<%= passenger_form.label :name, "Name:" %>
		<%= passenger_form.text_field :name %>
		
		<%= passenger_form.label :email, "Email:" %>
		<%= passenger_form.email_field :email %></br>
	<% end %></br>
	<%= b.submit "Book Now" %>
<% end %>
	

