<%= form_tag("/passengers", method: "post") do %>
	<%= hidden_field_tag "flight_id", params[:booking][:flight_id].to_i %>
	<% @passengers.each do |passenger| %>
		<%= fields_for "passengers[]", passenger do |pf| %>
			<%= pf.label :name, "Name:" %>
			<%= pf.text_field :name %></br>
			
			<%= pf.label :email, "Email:" %>
			<%= pf.email_field :email %></br></br>
		<% end %>
	<% end %>
	<%= submit_tag "Book Now" %>
<% end %>

